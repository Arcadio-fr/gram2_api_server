= form_for(@client) do |f|
  - if @client.errors.any?
    #error_explanation
      %h2
        = pluralize(@client.errors.count, "error")
        prohibited this client from being saved:
      %ul
        - @client.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    = f.label :password
    %br/
    = f.text_field :password
  .field
    = f.label :description
    %br/
    = f.text_field :description
  .field
    = f.label :active
    %br/
    = f.check_box :active
  .field
    = f.label :email
    %br/
    = f.text_field :email
  .field
    = f.label :authentication_token
    %br/
    = f.text_field :authentication_token
  .actions
    = f.submit
