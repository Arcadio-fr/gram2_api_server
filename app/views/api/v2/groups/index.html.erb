<p id="notice"><%= notice %></p>

<h1>Listing Groups</h1>

<table>
  <thead>
    <tr>
      <th>Guid</th>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @groups.each do |group| %>
      <tr>
        <td><%= group.guid %></td>
        <td><%= group.name %></td>
        <td><%= group.description %></td>
        <td><%= link_to 'Show', api_v2_group_path(group) %></td>
        <td><%= link_to 'Edit', edit_api_v2_group_path(group) %></td>
        <td><%= link_to 'Destroy', api_v2_group_path(group), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

