%p#notice= notice
%h1 Listing Groups
%table
  %thead
    %tr
      %th Guid
      %th Name
      %th Description
      %th{:colspan => "3"}
  %tbody
    - @groups.each do |group|
      %tr
        %td= group.guid
        %td= group.name
        %td= group.description
        %td= link_to 'Show', api_v2_group_path(group)
        %td= link_to 'Edit', edit_api_v2_group_path(group)
        %td= link_to 'Destroy', api_v2_group_path(group), method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Group', new_api_v2_group_path
